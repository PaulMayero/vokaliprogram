
MainMenuRoot:

<MainMenuRoot>:
    MainMenuForm

<MainMenuForm>:
    orientation:'vertical'
    padding:"50dp"
	spacing:30

    BoxLayout:
		orientation:"vertical"
	    height:"40dp"
		size_hint_y:.75
		padding:10
        Button:
            text:"Vokali"
			size_hint:1,1
            background_color:.7,.7,1,1
			on_press:app.root.view_switching_to_swahilivowels()
			
			
				
            
			
		Button:
		    text:"Herufi"
			size_hint:1,1
			background_color:.7,.7,1,1
			on_press:app.root.view_switching_to_herufi()
		Button:
			text:"maneno"
			size_hint:1,1
			background_color:.7,.7,1,1
			on_press:app.root.view_switching_to_maneno()
		
			
		
			
            

